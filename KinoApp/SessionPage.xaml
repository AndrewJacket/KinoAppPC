<Page x:Class="KinoApp.SessionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinoApp"
      mc:Ignorable="d" 
      d:DesignHeight="890" d:DesignWidth="1920"
      Background="White"
      Title="SessionPage" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#46211A"/>
        <Button Grid.Row="0" Name="updateBtn" Content="Выбрать дату"  Width="200" Margin="1155,0,515,0"  FontFamily="Proxima Nova" FontSize="20" Foreground="White" Background="#A43820" Click="updateBtn_Click" />
        <DatePicker Name="DateSession" Grid.Row="0" IsDropDownOpen="False" SelectedDateFormat="Short" HorizontalAlignment="Right" Width="380" />

      
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1"  Name="SessionFrame" Height="840"/>
    </Grid>
</Page>
